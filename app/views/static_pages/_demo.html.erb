<div class="col-xs-12 nopadding" id="slide-show">
  <div class="col-xs-8 nopadding">
    <div id="slide-ad" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#slide-ad" data-slide-to="0" class="active"></li>
        <li data-target="#slide-ad" data-slide-to="1"></li>
        <li data-target="#slide-ad" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <%= image_tag "slide1.png" %>
        </div>
        <div class="item">
          <%= image_tag "slide2.png" %>
        </div>
        <div class="item">
          <%= image_tag "slide3.png" %>
        </div>
      </div>
      <a class="left carousel-control" href="#slide-ad"
      role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#slide-ad"
      role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
