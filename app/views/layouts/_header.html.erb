<header>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header col-xs-3">
        <button type="button" class="navbar-toggle collapsed"
          data-toggle="collapse" data-target="#menu"
          aria-expanded="false">
          <span class="sr-only"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to t(".name_project"), root_path, class: "navbar-brand" %>
      </div>
      <div class="collapse navbar-collapse" id="menu">
        <div class="col-md-5" id="header_search">
          <%= form_tag search_path, method: :get do %>
            <div class="input-group">
              <%= text_field_tag :term, params["term"], id: "filter-autocomplete-search", class: "form-control" %>
              <span class="input-group-btn">
                <%= submit_tag t(".search"),class: "btn btn-default" %>
              </span>
            </div>
          <% end %>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t(".home"), root_path %></li>
          <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t(".acc") %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(".profile"), current_user %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t(".logout"), logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t(".signup"), signup_path %></li>
            <li><%= link_to t(".login"), login_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
<script type="text/javascript">
  $("#filter-autocomplete-search").autocomplete({
    source: "/search",
    minLength: 1
  });
</script>
