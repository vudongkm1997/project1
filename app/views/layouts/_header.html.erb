<header>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header col-xs-3">
        <button type="button" class="navbar-toggle collapsed"
          data-toggle="collapse" data-target="#menu"
          aria-expanded="false">
          <span class="sr-only"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to t(".name_project"), root_path, class: "navbar-brand" %>
      </div>
      <div class="collapse navbar-collapse" id="menu">
        <div class="col-md-4" id="header_search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="">
            <span class="input-group-btn">
              <button class="btn btn-default" type="button"><%= t ".seach" %></button>
            </span>
          </div>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t(".home"), root_path %></li>
          <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t(".acc") %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(".profile"), current_user %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t(".logout"), logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
          <li><%= link_to t(".signup"), signup_path %></li>
          <li><%= link_to t(".login"), login_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
