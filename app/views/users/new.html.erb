<% provide :title, t(".signup") %>
<h1><%= t ".signup" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <div class="col-xs-12">
        <%= f.label :email %>
      <%= f.email_field :email, placeholder: t(".enter_your_email"), class: "form-control" %>
      </div>
      <div class="col-xs-12">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: t(".enter_your_name"),
          class: "form-control" %>
      </div>
      <div class="col-xs-12">
        <%= f.label :phone %>
        <%= f.text_field :phone, placeholder: t(".enter_your_phone"),
          class: "form-control" %>
      </div>
      <div class="col-xs-12">
        <%= f.label :address %>
        <%= f.text_field :address, placeholder: t(".enter_your_address"),
          class: "form-control" %>
      </div>
      <div class="col-xs-12">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: t(".enter_your_password"),
          class: "form-control" %>
      </div>
      <div class="col-xs-12">
        <%= f.label :password_confirmation, t(".confirm") %>
        <%= f.password_field :password_confirmation,
          placeholder: t(".enter_your_password_confirmation"),
          class: "form-control" %>
      </div>
      <div class="col-xs-push-4 col-xs-4">
        <%= f.submit t(".create_acc"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
