<% provide :title, t(".update-product") %>
<h1><%= t ".update-product" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @product do |f| %>
    <%= render "shared/error_product_messages" %>

      <div class="col-xs-6">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-xs-6">
        <%= f.label :description %>
        <%= f.text_field :description, class: "form-control" %>
      </div>
      <div class="col-xs-6">
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control",
          accept: "image/jpeg,image/gif,image/png" %>
      </div>
      <div class="col-xs-6">
        <%= f.label :quantity %>
        <%= f.text_field :quantity, class: "form-control" %>
      </div>
      <div class="col-xs-6">
        <%= f.label :price %>
        <%= f.text_field :price, class: "form-control" %>
      </div>
       <div class="col-xs-6">
        <%= f.label :category_id %>
        <%= f.select :category_id, Category.pluck(&:id), class: "form-control" %>
      </div>
      <div class="col-xs-push-4 col-xs-4">
        <%= f.submit t(".save"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
