<% provide :title, t(".all-products") %>
<h1><%= t(".all-products") %></h1>

<ul class="products">
  <% @products.each do |product| %>
    <li>
      <%= image_tag product.image %>
      <%= product.name %>
      <%= product.description %>
      <%= product.quantity %>
      <%= product.price %>
      <%= product.status %>
      <%= product.category_id %>
      <%= link_to t("update-product"), edit_product_path(product.id) %>
      <%= link_to t("delete-product"), product, method: :delete, data:
        { confirm: "You sure?" }  %>
    </li>
  <% end %>
  <%= paginate @products, theme: 'twitter-bootstrap-3' %>
</ul>
